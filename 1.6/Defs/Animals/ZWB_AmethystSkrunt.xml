<Defs>



	<ThingDef ParentName="AnimalThingBase">
		<defName>ZWB_AmethystSkrunt</defName>
		<label>amethyst skrunt</label>
		<description>A small creature that often makes its nests within amethyst veils. Many consider it a nuisance and see it as a bad omen.</description>
		<statBases>
			<MoveSpeed>4.0</MoveSpeed>
			<ComfyTemperatureMin>-10</ComfyTemperatureMin>
			<MarketValue>40</MarketValue>
			<Wildness>0.5</Wildness>
		</statBases>
		<comps>
			<li Class="CompProperties_EggLayer">
				<eggUnfertilizedDef>ZWB_EggAmethystSkruntUnfertilized</eggUnfertilizedDef>
				<eggFertilizedDef>ZWB_EggAmethystSkruntFertilized</eggFertilizedDef>
				<eggFertilizationCountMax>1</eggFertilizationCountMax>
				<eggLayIntervalDays>3.0</eggLayIntervalDays>
				<eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
				<eggCountRange>1~1</eggCountRange>
			</li>
		</comps>
		<race>
			<body>ZWB_QuadrupedLandFish</body>
			<herdAnimal>true</herdAnimal>
			<baseBodySize>0.2</baseBodySize>
			<baseHungerRate>0.1</baseHungerRate>
			<baseHealthScale>0.30</baseHealthScale>
			<foodType>OmnivoreRoughAnimal</foodType>
			<leatherDef>Leather_Light</leatherDef>
			<trainability>None</trainability>
			<lifeExpectancy>8</lifeExpectancy>
			<lifeStageAges>
				<li>
					<def>AnimalBaby</def>
					<minAge>0</minAge>
				</li>
				<li>
					<def>AnimalJuvenile</def>
					<minAge>0.1</minAge>
				</li>
				<li>
					<def>AnimalAdult</def>
					<minAge>0.2</minAge>
					<soundWounded>Pawn_Boomrat_Wounded</soundWounded>
					<soundDeath>Pawn_Boomrat_Death</soundDeath>
					<soundCall>Pawn_Boomrat_Call</soundCall>
					<soundAngry>Pawn_Boomrat_Angry</soundAngry>
				</li>
			</lifeStageAges>
			<soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
			<soundEating>Rodent_Eat</soundEating>
			<packAnimal>false</packAnimal>
			<!-- <headPosPerRotation> -->
			<!-- <li>(0.0, 0, 0.09)</li> -->
			<!-- <li>(0.28, 0, 0)</li> -->
			<!-- <li>(0.0, 0, -0.04)</li> -->
			<!-- <li>(-0.28, 0, 0)</li> -->
			<!-- </headPosPerRotation> -->
		</race>
		<tradeTags>
			<li>AnimalCommon</li>
		</tradeTags>
		<tools>
			<li>
				<capacities>
					<li>Bite</li>
				</capacities>
				<power>6</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
				<chanceFactor>0.7</chanceFactor>
			</li>
			<li>
				<label>head</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>2.2</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
				<chanceFactor>0.2</chanceFactor>
			</li>
			<li>
				<label>left flipper</label>
				<labelNoLocation>flipper</labelNoLocation>
				<capacities>
					<li>Blunt</li>
					<li>Poke</li>
				</capacities>
				<power>3.3</power>
				<cooldownTime>1.5</cooldownTime>
				<linkedBodyPartsGroup>ZWB_FrontLeftFlipper</linkedBodyPartsGroup>
			</li>
			<li>
				<label>right flipper</label>
				<labelNoLocation>flipper</labelNoLocation>
				<capacities>
					<li>Blunt</li>
					<li>Poke</li>
				</capacities>
				<power>3.3</power>
				<cooldownTime>1.5</cooldownTime>
				<linkedBodyPartsGroup>ZWB_FrontRightFlipper</linkedBodyPartsGroup>
			</li>
		</tools>
	</ThingDef>


