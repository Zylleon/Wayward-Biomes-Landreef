<Defs>



	<ThingDef ParentName="AnimalThingBase">
		<defName>ZWB_Jesterfish</defName>
		<label>jesterfish</label>
		<description>A large semiamphibious pack animal descended from a species of clown fish that had adapted to a land based life style. Jester Fish are used throughout the rim as pack animals and livestock due to their docile nature.</description>
		<statBases>
			<MoveSpeed>3.2</MoveSpeed>
			<ComfyTemperatureMin>-10</ComfyTemperatureMin>
			<MarketValue>300</MarketValue>
			<FilthRate>16</FilthRate>
			<Wildness>0.15</Wildness>
		</statBases>
		<comps>
			<li Class="CompProperties_EggLayer">
				<eggUnfertilizedDef>ZWB_EggJesterfishUnfertilized</eggUnfertilizedDef>
				<eggFertilizedDef>ZWB_EggJesterfishFertilized</eggFertilizedDef>
				<eggFertilizationCountMax>1</eggFertilizationCountMax>
				<eggLayIntervalDays>6.33</eggLayIntervalDays>
				<eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
				<eggCountRange>1~3</eggCountRange>
			</li>
		</comps>
		<race>
			<body>ZWB_QuadrupedLandFish</body>
			<herdAnimal>true</herdAnimal>
			<baseBodySize>2.25</baseBodySize>
			<baseHungerRate>0.49</baseHungerRate>
			<baseHealthScale>1.5</baseHealthScale>
			<foodType>VegetarianRoughAnimal</foodType>
			<leatherDef>Leather_Plain</leatherDef>
			<roamMtbDays>2</roamMtbDays>
			<trainability>None</trainability>
			<lifeExpectancy>22</lifeExpectancy>
			<lifeStageAges>
				<li>
					<def>AnimalBaby</def>
					<minAge>0</minAge>
				</li>
				<li>
					<def>AnimalJuvenile</def>
					<minAge>0.20</minAge>
				</li>
				<li>
					<def>AnimalAdult</def>
					<minAge>0.3333</minAge>
					<soundWounded>Pawn_Muffalo_Wounded</soundWounded>
					<soundDeath>Pawn_Muffalo_Death</soundDeath>
					<soundCall>Pawn_Muffalo_Call</soundCall>
					<soundAngry>Pawn_Muffalo_Angry</soundAngry>
				</li>
			</lifeStageAges>
			<soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
			<soundEating>Herbivore_Eat</soundEating>
			<packAnimal>true</packAnimal>
			<!-- <headPosPerRotation> -->
				<!-- <li>(0.0, 0, 0.09)</li> -->
				<!-- <li>(0.28, 0, 0)</li> -->
				<!-- <li>(0.0, 0, -0.04)</li> -->
				<!-- <li>(-0.28, 0, 0)</li> -->
			<!-- </headPosPerRotation> -->
		</race>
		<tradeTags>
			<li>AnimalCommon</li>
			<!-- <li>AnimalFarm</li> -->
		</tradeTags>
		<tools>
			<li>
				<capacities>
					<li>Bite</li>
				</capacities>
				<power>8.8</power>
				<cooldownTime>2.6</cooldownTime>
				<linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
				<chanceFactor>0.7</chanceFactor>
			</li>
			<li>
				<label>head</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>7</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
				<chanceFactor>0.2</chanceFactor>
			</li>
			<li>
				<label>left flipper</label>
				<labelNoLocation>flipper</labelNoLocation>
				<capacities>
					<li>Blunt</li>
					<li>Poke</li>
				</capacities>
				<power>8</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>ZWB_FrontLeftFlipper</linkedBodyPartsGroup>
			</li>
			<li>
				<label>right flipper</label>
				<labelNoLocation>flipper</labelNoLocation>
				<capacities>
					<li>Blunt</li>
					<li>Poke</li>
				</capacities>
				<power>8</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>ZWB_FrontRightFlipper</linkedBodyPartsGroup>
			</li>
		</tools>
	</ThingDef>


