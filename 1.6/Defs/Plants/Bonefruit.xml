<?xml version="1.0" encoding="utf-8"?>
<Defs>


	<ThingDef ParentName="PlantBase" >
		<defName>ZWB_Bonefruit</defName>
		<label>bonefruit</label>
		<description>A bushy wild plant which yields delicious berries. Berries can be cooked, but they're also good to eat even when raw.</description>
		<statBases>
			<MaxHitPoints>120</MaxHitPoints>
			<Nutrition>0.50</Nutrition>
		</statBases>
		<graphicData>
			<texPath>ZWB_Textures/Plants/Bonefruit</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<shadowData>
				<volume>(0.35, 0.35, 0.25)</volume>
				<offset>(0,0,-0.25)</offset>
			</shadowData>
		</graphicData>
		<selectable>true</selectable>
		<neverMultiSelect>false</neverMultiSelect>
		<fillPercent>0.20</fillPercent>
		<pathCost>30</pathCost>
		<plant>
			<fertilityMin>0.5</fertilityMin>
			<fertilitySensitivity>0.5</fertilitySensitivity>
			<growDays>9.5</growDays>
			<immatureGraphicPath>ZWB_Textures/Plants/Bonefruit_Immature</immatureGraphicPath>
			<harvestYield>21</harvestYield>
			<harvestWork>250</harvestWork>
			<harvestTag>Standard</harvestTag>
			<harvestAfterGrowth>0.30</harvestAfterGrowth>
			<harvestedThingDef>ZWB_BonefruitFruit</harvestedThingDef>
			<wildClusterRadius>5</wildClusterRadius>
			<wildClusterWeight>250</wildClusterWeight>
			<visualSizeRange>0.6~1.0</visualSizeRange>
			<topWindExposure>0.3</topWindExposure>
			<wildOrder>2</wildOrder>
			<purpose>Food</purpose>
		</plant>
	</ThingDef>



  <ThingDef ParentName="PlantFoodRawBase">
    <defName>ZWB_BonefruitFruit</defName>
    <label>bonefruit fruit</label>
    <description>Assorted berries. Nice to eat, even when raw.</description>
    <graphicData>
      <texPath>ZWB_Textures/Things/BonefruitFruit</texPath>
    </graphicData>
    <statBases>
      <MarketValue>1.2</MarketValue>
      <Mass>0.027</Mass>
    </statBases>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>34</daysToRotStart>
        <rotDestroys>true</rotDestroys>
      </li>
    </comps>
    <ingestible>
      <preferability>RawTasty</preferability>
      <tasteThought></tasteThought>
      <foodType>VegetableOrFruit</foodType>
    </ingestible>
  </ThingDef>

</Defs>

