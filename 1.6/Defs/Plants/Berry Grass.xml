<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<ThingDef ParentName="PlantBase" Name="ZWB_BerryGrassBase" Abstract="True">
		<description>A unique relative of firegrass, it is taller and leaks a viscous sap that forms large round clumps full of seeds. While the yield is low individually, they provide a reliable food source due to dense growth.</description>
		<statBases>
			<MaxHitPoints>120</MaxHitPoints>
			<Nutrition>0.50</Nutrition>
		</statBases>
		<graphicData>
			<texPath>ZWB_Textures/Plants/BerryGrass</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<selectable>true</selectable>
		<pathCost>14</pathCost>
		<ingestible/>
		<plant>
			<fertilityMin>0.5</fertilityMin>
			<fertilitySensitivity>0.8</fertilitySensitivity>
			<growDays>3.5</growDays>
			<immatureGraphicPath>ZWB_Textures/Plants/BerryGrass_Immature</immatureGraphicPath>
			<harvestYield>7</harvestYield>
			<harvestWork>190</harvestWork>
			<maxMeshCount>4</maxMeshCount>
			<harvestTag>Standard</harvestTag>
			<!-- <harvestAfterGrowth>0.30</harvestAfterGrowth> -->
			<harvestedThingDef>ZWB_RawGrassBerries</harvestedThingDef>
			<wildClusterRadius>5</wildClusterRadius>
			<wildClusterWeight>250</wildClusterWeight>
			<visualSizeRange>0.5~0.85</visualSizeRange>
			<topWindExposure>0.15</topWindExposure>
			<wildOrder>2</wildOrder>
			<purpose>Food</purpose>
		</plant>
	</ThingDef>



	<ThingDef ParentName="ZWB_BerryGrassBase">
		<defName>ZWB_BerryGrassWild</defName>
		<label>wild berry grass</label>
		<neverMultiSelect>false</neverMultiSelect>
	</ThingDef>
	
	

	<ThingDef ParentName="ZWB_BerryGrassBase">
		<defName>ZWB_BerryGrass</defName>
		<label>berry grass</label>
		<plant>
			<sowWork>800</sowWork>
			<sowMinSkill>3</sowMinSkill>
			<sowTags>
				<li>Ground</li>
				<li>Hydroponic</li>
			</sowTags>
			<mustBeWildToSow>true</mustBeWildToSow>
			<!-- <sowResearchPrerequisites> -->
				<!-- <li>Devilstrand</li> -->
			<!-- </sowResearchPrerequisites> -->
		</plant>
	</ThingDef>



  <ThingDef ParentName="PlantFoodRawBase">
    <defName>ZWB_RawGrassBerries</defName>
    <label>grass berries</label>
    <description>A clump of seeds encased in hardened sap. Can be eaten raw, but is better cooked.</description>
    <soundInteract>Grain_Drop</soundInteract>
    <soundDrop>Grain_Drop</soundDrop>
    <graphicData>
      <texPath>ZWB_Textures/Things/GrassBerries</texPath>
    </graphicData>
    <statBases>
      <MarketValue>1.1</MarketValue>
    </statBases>
    <ingestible>
      <foodType>Seed</foodType>
    </ingestible>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>25</daysToRotStart>
        <rotDestroys>true</rotDestroys>
      </li>
    </comps>
  </ThingDef>
</Defs>

