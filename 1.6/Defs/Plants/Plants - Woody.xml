<?xml version="1.0" encoding="utf-8"?>
<Defs>
	
	
  <ThingDef ParentName="PlantBase" Name="ZWB_DredgewoodTreeBase" Abstract="True">
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <Flammability>0.8</Flammability>
      <Nutrition>2.0</Nutrition>
      <Mass>150</Mass>
    </statBases>
    <altitudeLayer>Building</altitudeLayer>
    <selectable>true</selectable>
    <fillPercent>0.25</fillPercent>
    <minifiedDef>MinifiedTree</minifiedDef>
    <rotatable>false</rotatable>
    <graphicData>
      <shadowData>
        <volume>(0.2, 0.35, 0.13)</volume>
        <offset>(0,0,-0.42)</offset>
      </shadowData>
    </graphicData>
    <passability>PassThroughOnly</passability>
    <pathCost>42</pathCost>
    <blockWind>true</blockWind>
    <ingestible>
      <foodType>Tree</foodType>
      <preferability>RawBad</preferability>
    </ingestible>
    <plant>
      <lifespanDaysPerGrowDays>9</lifespanDaysPerGrowDays>
      <fertilitySensitivity>0.5</fertilitySensitivity>
      <soundHarvesting>Harvest_Tree</soundHarvesting>
      <soundHarvestFinish>Harvest_Tree_Finish</soundHarvestFinish>
      <sowWork>4000</sowWork>
      <sowMinSkill>6</sowMinSkill>
      <sowResearchPrerequisites>
        <li>TreeSowing</li>
      </sowResearchPrerequisites>
      <mustBeWildToSow>true</mustBeWildToSow>
      <harvestWork>800</harvestWork>
      <harvestedThingDef>ZWB_Dredgewood</harvestedThingDef>
      <harvestYield>25</harvestYield>
      <harvestTag>Wood</harvestTag>
      <harvestMinGrowth>0.60</harvestMinGrowth>
      <harvestFailable>false</harvestFailable>
      <blockAdjacentSow>true</blockAdjacentSow>
      <treeLoversCareIfChopped>true</treeLoversCareIfChopped>
      <burnedThingDef>BurnedTree</burnedThingDef>
      <!-- <choppedThingDef>ChoppedStump</choppedThingDef> -->
      <!-- <smashedThingDef>SmashedStump</smashedThingDef> -->
      <treeCategory>Full</treeCategory>
      <sowTags>
        <li>Ground</li>
      </sowTags>
      <!-- <visualSizeRange>1.5~2.0</visualSizeRange> -->
      <topWindExposure>0.25</topWindExposure>
      <wildClusterRadius>8</wildClusterRadius>
      <wildClusterWeight>24</wildClusterWeight>
      <wildOrder>3</wildOrder>
      <interferesWithRoof>true</interferesWithRoof>
      <destroyedByFlooding>false</destroyedByFlooding>
    </plant>
  </ThingDef>


	<ThingDef ParentName="ZWB_DredgewoodTreeBase">
		<defName>ZWB_SeaRod</defName>
		<label>sea rod</label>
		<description>A slow growing coral adapted to grow on land. It is named after it's distinctive fiery coloring. It can be chopped down for dredgewood, a fire-resistant woody material.</description>
		<graphicData>
			<texPath>ZWB_Textures/Plants/SeaRod</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<shadowData>
				<volume>(0.15, 0.3, 0.15)</volume>
				<offset>(0,0,-0.38)</offset>
			</shadowData>
		</graphicData>
		<statBases>
			<Beauty>2</Beauty>
			<BeautyOutdoors>2</BeautyOutdoors>
		</statBases>
		<plant>
			<growDays>30</growDays>
			<harvestWork>1400</harvestWork>
			<harvestYield>46</harvestYield>
			<wildClusterWeight>35</wildClusterWeight>
			<visualSizeRange>0.6~2.0</visualSizeRange>
			<immatureGraphicPath>ZWB_Textures/Plants/SeaRod_Immature</immatureGraphicPath>
		</plant>
	</ThingDef>
	
	
	
	
	<ThingDef ParentName="ZWB_DredgewoodTreeBase">
		<defName>ZWB_SeaWhip</defName>
		<label>sea whip</label>
		<description>A long diverged relative of the orange coral, this blue coral is known for its quick growth. It can be chopped down for a small amount of dredgewood.</description>
		<graphicData>
			<texPath>ZWB_Textures/Plants/SeaWhip</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<shadowData>
				<volume>(0.07, 0.3, 0.07)</volume>
				<offset>(0,0,-0.38)</offset>
			</shadowData>
		</graphicData>
		<statBases>
			<Beauty>2</Beauty>
			<BeautyOutdoors>2</BeautyOutdoors>
		</statBases>
		<plant>
			<growDays>15</growDays>
			<harvestWork>1400</harvestWork>
			<harvestYield>25</harvestYield>
			<wildClusterWeight>35</wildClusterWeight>
			<visualSizeRange>0.8~2.8</visualSizeRange>
			<immatureGraphicPath>ZWB_Textures/Plants/SeaWhip_Immature</immatureGraphicPath>
		</plant>
	</ThingDef>
	
	
		<ThingDef ParentName="BushBase">
		<defName>ZWB_LauBranch</defName>
		<label>lau branch</label>
		<description>A type of woody coral that has long ago moved to land. While rather rare, it has existed on land for so long that its structure is nearly identical to the wood of trees, and it can be harvested for normal wood.</description>
		<graphicData>
			<texPath>ZWB_Textures/Plants/Table</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<shadowData>
				<volume>(0.15, 0.2, 0.15)</volume>
			</shadowData>
		</graphicData>
		<uiIconScale>0.85</uiIconScale>
		<plant>
			<fertilitySensitivity>0.2</fertilitySensitivity>
			<growDays>12</growDays>
			<wildClusterRadius>4</wildClusterRadius>
			<wildClusterWeight>25</wildClusterWeight>
			<visualSizeRange>0.8~2.2</visualSizeRange>
			<topWindExposure>0.20</topWindExposure>
			<wildOrder>2</wildOrder>
			<harvestedThingDef>WoodLog</harvestedThingDef>
			<harvestYield>25</harvestYield>
		</plant>
	</ThingDef>
	
	
	
</Defs>

