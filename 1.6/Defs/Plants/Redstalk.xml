<?xml version="1.0" encoding="utf-8"?>
<Defs>


	<ThingDef ParentName="PlantBase">
		<defName>ZWB_Redstalk</defName>
		<label>redstalk</label>
		<description>A bushy wild plant which yields delicious berries. Berries can be cooked, but they're also good to eat even when raw.</description>
		<statBases>
			<MaxHitPoints>120</MaxHitPoints>
			<Nutrition>0.50</Nutrition>
		</statBases>
		<graphicData>
			<texPath>ZWB_Textures/Plants/Redstalk</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<selectable>true</selectable>
		<neverMultiSelect>false</neverMultiSelect>
		<fillPercent>0.20</fillPercent>
		<pathCost>30</pathCost>
		<plant>
			<fertilityMin>0.5</fertilityMin>
			<fertilitySensitivity>0.5</fertilitySensitivity>
			<growDays>3.5</growDays>
			<immatureGraphicPath>ZWB_Textures/Plants/Redstalk_Immature</immatureGraphicPath>
			<harvestYield>7</harvestYield>
			<harvestWork>190</harvestWork>
			<maxMeshCount>4</maxMeshCount>
			<harvestTag>Standard</harvestTag>
			<harvestAfterGrowth>0.30</harvestAfterGrowth>
			<harvestedThingDef>ZWB_RawRedstalk</harvestedThingDef>
			<wildClusterRadius>5</wildClusterRadius>
			<wildClusterWeight>250</wildClusterWeight>
			<visualSizeRange>0.5~0.85</visualSizeRange>
			<topWindExposure>0.15</topWindExposure>
			<wildOrder>2</wildOrder>
			<purpose>Food</purpose>
		</plant>
	</ThingDef>



  <ThingDef ParentName="PlantFoodRawBase">
    <defName>ZWB_RawRedstalk</defName>
    <label>redstalk fruit</label>
    <description>Raw redstalk fruit.</description>
    <soundInteract>Grain_Drop</soundInteract>
    <soundDrop>Grain_Drop</soundDrop>
    <graphicData>
      <texPath>ZWB_Textures/Things/RedstalkFruit</texPath>
    </graphicData>
    <statBases>
      <MarketValue>1.1</MarketValue>
    </statBases>
    <ingestible>
      <foodType>VegetableOrFruit</foodType>
    </ingestible>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>25</daysToRotStart>
        <rotDestroys>true</rotDestroys>
      </li>
    </comps>
  </ThingDef>
</Defs>

