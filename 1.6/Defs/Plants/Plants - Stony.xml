<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThingDef ParentName="BushBase" Name="ZWB_StonyCoralBase" Abstract="True">
		<plant>
			<fertilitySensitivity>0.5</fertilitySensitivity>
			<growDays>32</growDays>
			<wildClusterRadius>4</wildClusterRadius>
			<wildClusterWeight>500</wildClusterWeight>
			<visualSizeRange>0.4~1.6</visualSizeRange>
			<topWindExposure>0</topWindExposure>
			<wildOrder>2</wildOrder>
			<harvestedThingDef>ZWB_CoralithChunk</harvestedThingDef>
			<harvestYield>5</harvestYield>
			<harvestTag>Standard</harvestTag>
			<harvestMinGrowth>0.85</harvestMinGrowth>
			<soundHarvesting>Harvest_Tree</soundHarvesting>
			<soundHarvestFinish>Harvest_Standard_Finish</soundHarvestFinish>
		</plant>
	</ThingDef>


	<ThingDef ParentName="ZWB_StonyCoralBase">
		<defName>ZWB_Brainstone</defName>
		<label>brainstone</label>
		<description>Descended from ancient brain coral, brainstone is a massive, slow-growing organism that deposits thick layers of calcified material over many decades. Its folded surface maximizes mineral uptake from salty soils. While difficult to cultivate, it yields large quantities of coralite when harvested.</description>
		<graphicData>
			<texPath>ZWB_Textures/Plants/Brainstone</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<shadowData>
				<volume>(0.55, 0.2, 0.2)</volume>
			</shadowData>
		</graphicData>
		<uiIconScale>0.85</uiIconScale>
		<plant>
			<fertilitySensitivity>0.5</fertilitySensitivity>
			<growDays>32</growDays>
			<wildClusterRadius>4</wildClusterRadius>
			<wildClusterWeight>500</wildClusterWeight>
			<visualSizeRange>0.4~1.6</visualSizeRange>
			<wildOrder>2</wildOrder>
			<harvestYield>15</harvestYield>
		</plant>
	</ThingDef>
	
	
	
	
	<ThingDef ParentName="ZWB_StonyCoralBase">
		<defName>ZWB_StarCoral</defName>
		<label>star coral</label>
		<description>A small, aggressive coral cultivar that grows in dense, spined clusters. Its dark pigmentation improves tolerance to sunlight and desiccation. It matures faster than brainstone but produces less coralite per harvest.</description>
		<graphicData>
			<texPath>ZWB_Textures/Plants/StarCoral</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<shadowData>
				<volume>(0.40, 0.15, 0.15)</volume>
			</shadowData>
		</graphicData>
		<uiIconScale>0.85</uiIconScale>
		<plant>
			<fertilitySensitivity>0.2</fertilitySensitivity>
			<growDays>11</growDays>
			<wildClusterRadius>4</wildClusterRadius>
			<wildClusterWeight>90</wildClusterWeight>
			<visualSizeRange>0.4~0.9</visualSizeRange>
			<wildOrder>2</wildOrder>
			<harvestYield>4</harvestYield>
		</plant>
	</ThingDef>
	
	
	
	
	
</Defs>

