<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<ThingDef ParentName="PlantBase" Name="ZWB_LilypadBase" Abstract="True">
		<description>A squat coral-like lilypad imitator with a broad basal structure that produces gelatinous fruiting bodies. These nutrient-rich masses are edible, however, they are highly perishable.</description>
		<statBases>
			<MaxHitPoints>120</MaxHitPoints>
			<Nutrition>0.50</Nutrition>
		</statBases>
		<graphicData>
			<texPath>ZWB_Textures/Plants/Lilypad</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<shadowData>
				<volume>(0.35, 0.35, 0.25)</volume>
				<offset>(0,0,-0.25)</offset>
			</shadowData>
		</graphicData>
		<selectable>true</selectable>
		<pathCost>30</pathCost>
		<ingestible/>
		<plant>
			<fertilityMin>0.5</fertilityMin>
			<fertilitySensitivity>0.5</fertilitySensitivity>
			<growDays>9.5</growDays>
			<immatureGraphicPath>ZWB_Textures/Plants/Lilypad_Immature</immatureGraphicPath>
			<harvestYield>21</harvestYield>
			<harvestWork>250</harvestWork>
			<harvestTag>Standard</harvestTag>
			<harvestAfterGrowth>0.30</harvestAfterGrowth>
			<harvestedThingDef>ZWB_Algfruit</harvestedThingDef>
			<wildClusterRadius>5</wildClusterRadius>
			<wildClusterWeight>250</wildClusterWeight>
			<visualSizeRange>0.6~1.0</visualSizeRange>
			<topWindExposure>0.3</topWindExposure>
			<wildOrder>2</wildOrder>
			<purpose>Food</purpose>
		</plant>
	</ThingDef>



	<ThingDef ParentName="ZWB_LilypadBase">
		<defName>ZWB_LilypadWild</defName>
		<label>wild lilypad</label>
		<neverMultiSelect>false</neverMultiSelect>
	</ThingDef>
	
	
	

	<ThingDef ParentName="ZWB_LilypadBase">
		<defName>ZWB_Lilypad</defName>
		<label>lilypad</label>
		<plant>
			<mustBeWildToSow>true</mustBeWildToSow>
			<sowWork>800</sowWork>
			<sowMinSkill>0</sowMinSkill>
			<sowTags>
				<li>Ground</li>
				<li>Hydroponic</li>
			</sowTags>
			<!-- <sowResearchPrerequisites> -->
				<!-- <li>Devilstrand</li> -->
			<!-- </sowResearchPrerequisites> -->
		</plant>
	</ThingDef>


	
