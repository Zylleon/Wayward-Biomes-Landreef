<?xml version="1.0" encoding="utf-8"?>
<Defs>

	
	<ThingDef ParentName="PlantBase" Name="ZWB_AlgfruitBase" Abstract="True">
		<description>A pale coral that has formed a unique symbiosis with algae. The coral provides structure and height for the algae that forms small lumps on the outside of the coral, which is surprisingly delicious, even when raw.</description>
		<statBases>
			<MaxHitPoints>120</MaxHitPoints>
			<Nutrition>0.50</Nutrition>
		</statBases>
		<graphicData>
			<texPath>ZWB_Textures/Plants/Algfruit</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<shadowData>
				<volume>(0.35, 0.35, 0.25)</volume>
				<offset>(0,0,-0.25)</offset>
			</shadowData>
		</graphicData>
		
		<selectable>true</selectable>
		<pathCost>30</pathCost>
		<ingestible/>
		<plant>
			<fertilityMin>0.5</fertilityMin>
			<fertilitySensitivity>0.5</fertilitySensitivity>
			<growDays>9.5</growDays>
			<immatureGraphicPath>ZWB_Textures/Plants/Algfruit_Immature</immatureGraphicPath>
			<harvestYield>21</harvestYield>
			<harvestWork>250</harvestWork>
			<harvestTag>Standard</harvestTag>
			<harvestAfterGrowth>0.30</harvestAfterGrowth>
			<harvestedThingDef>ZWB_Algfruit</harvestedThingDef>
			<wildClusterRadius>5</wildClusterRadius>
			<wildClusterWeight>250</wildClusterWeight>
			<visualSizeRange>0.6~1.0</visualSizeRange>
			<topWindExposure>0.3</topWindExposure>
			<wildOrder>2</wildOrder>
			<purpose>Food</purpose>
		</plant>
	</ThingDef>


	<ThingDef ParentName="ZWB_AlgfruitBase">
		<defName>ZWB_AlgfruitCoralWild</defName>
		<label>wild algfruit coral</label>
		<neverMultiSelect>false</neverMultiSelect>
	</ThingDef>
	


	<ThingDef ParentName="ZWB_AlgfruitBase">
		<defName>ZWB_AlgfruitCoral</defName>
		<label>algfruit coral</label>
		<plant>
			<mustBeWildToSow>true</mustBeWildToSow>
			<sowWork>800</sowWork>
			<sowMinSkill>6</sowMinSkill>
			<sowTags>
				<li>Ground</li>
				<!-- <li>Hydroponic</li> -->
			</sowTags>
			<!-- <sowResearchPrerequisites> -->
				<!-- <li>Devilstrand</li> -->
			<!-- </sowResearchPrerequisites> -->
		</plant>
	</ThingDef>




  <ThingDef ParentName="PlantFoodRawBase">
    <defName>ZWB_Algfruit</defName>
    <label>algfruit</label>
    <description>Raw algfruit. Nice to eat, even when raw.</description>
    <graphicData>
      <texPath>ZWB_Textures/Things/Algfruit</texPath>
    </graphicData>
    <statBases>
      <MarketValue>1.2</MarketValue>
      <Mass>0.027</Mass>
    </statBases>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>34</daysToRotStart>
        <rotDestroys>true</rotDestroys>
      </li>
    </comps>
    <ingestible>
      <preferability>RawTasty</preferability>
      <tasteThought></tasteThought>
      <foodType>VegetableOrFruit</foodType>
    </ingestible>
  </ThingDef>

</Defs>

